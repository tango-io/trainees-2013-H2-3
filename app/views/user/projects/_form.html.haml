- @project.user_id = current_user.id
- if @project.errors.any?
  %h2
    = pluralize(@project.errors.count, 'error') 
    saving
  %ul
    - @project.errors.full_messages.each do |msg|
      %li= msg
%div{"ng-controller" => "categoriesController", "ng-init" => "showCategories()"}
  = form_for ([:user, @project]), :html => {:multipart => true} do |f|
    .div.row
      .span4
        = f.label      :name
        = f.text_field :name 
        %br/
        = f.label      :video_url
        = f.file_field :video_url
        %br/
        = f.label      :description
        = f.text_field :description
        %br/
        = f.label      :amount
        = f.text_field :amount
        %br/
      .span6
        = f.label      :country
        %select{"ng-model" => "selectedCoutry","ng-options" => "country for country in countries","ng-init" => "selectedCity=country", "ng-required" => ""}
        = f.label      :city
        %select{"ng-model" => "selectedCity","ng-options" => "city for city in cityMex","ng-init" => "selectedCity=city", "ng-required" => ""}
        %select{"ng-model" => "selectedCity","ng-options" => "city for city in cityUsa","ng-init" => "selectedCity=city", "ng-required" => ""}
        = f.hidden_field :city, value: "{{selectedCity}}" 
        %br/
        = f.label      :close_date
        = f.text_field :close_date, :id => "datepicker"
        %br/
        = f.label        :category_id
        %select{"ng-model" => "selectedCategory","ng-options" => "c.name for c in categories","ng-init" => "selectedCategory.id=c.id" ,"ng-required" => ""}
        = f.hidden_field :user_id
        = f.hidden_field :category_id, value: "{{selectedCategory.id}}" 
        %br/
        = f.submit
        = submit_tag 'Preview', :name => 'preview' 
      
