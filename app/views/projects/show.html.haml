#main-project-container
  %section
    .notice
    = flash[:notice]
    .project-header
      %h2= @project.name
      %p
        by 
        = @owner.email
    .project-container.modal
      .container-head
        .project-video
          -#%iframe{:allowfullscreen => "", :frameborder => "0", :height => "480px", :src => "//www.youtube.com/embed/jvEaOBty6xI", :width => "640"}
          = video_tag @project.video_url, :size => "640x480", :controls => true
        .project-donations
          %h1
            = @users.count
          %h5 Bakers
          %h1 $00.00
          %h5 
            Pledged of
          %h1
            $
            = @project.amount
            %h5 to goal
          %h1 
            = @time_to_finish
          %h5 Days to go
          %br  
          %br
          - if user_signed_in?
            - if @owner.id != current_user.id
              - if @close_date == 1
                .btn.btn-large.btn-block.btn-danger
                  THIS PROJECT IS CLOSE
              - else
                = link_to "Back this project", new_back_path(:project => @project.id), class: "btn btn-large btn-block btn-primary"
            - else
              .btn.btn-large.btn-block.btn-danger
                You can NOT back your own project
          - else
            .btn.btn-large.btn-block.btn-danger
              You can NOT back if you aren't logged in

          %h2 Backers
          - @users.each do |user|
            %tr
              %td #{user.email}
              %br
          %br
          %br
      .project-description
        %h3 Project Description
        %p
          Ciudad:
          = @project.city
          Close date
          = @project.close_date
        = @project.description
