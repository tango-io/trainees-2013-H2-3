- @project.user_id = current_user.id

= form_for(@project) do |f|
  %p
    = f.label      :name
    = f.text_field :name 
    %br/
    = f.label      :city
    = f.text_field :city 
    %br/
    = f.label      :close_date
    = f.text_field :close_date
    %br/
    = f.label      :description
    = f.text_field :description
    %br/
    = f.label      :amount
    = f.text_field :amount
    %br/
    = f.hidden_field :user_id
    = f.hidden_field :category_id
    %br/
    = f.submit
